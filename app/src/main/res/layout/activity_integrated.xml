<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_top_status"
        layout="@layout/ac_top_layout_status" />

    <ImageView
        android:id="@+id/main_iv_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/app_title"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_top_status" />

    <LinearLayout
        android:id="@+id/integrated_ll_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_iv_emblem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/integrated_iv_keep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/keep"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_10dp"/>

        <ImageView
            android:id="@+id/integrated_iv_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scrap"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_10dp"/>

        <ImageView
            android:id="@+id/integrated_iv_temp_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@drawable/tempstore2"
            android:layout_margin="@dimen/dimen_10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/integrated_ll_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/integrated_iv_instore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instore"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_10dp"/>

        <ImageView
            android:id="@+id/integrated_iv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@drawable/info"
            android:layout_margin="@dimen/dimen_10dp"
            />

        <ImageView
            android:id="@+id/integrated_iv_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@drawable/char_manage"
            android:layout_margin="@dimen/dimen_10dp"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
