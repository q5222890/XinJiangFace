<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:id="@+id/user_list_cl_root_view"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/user_list_item_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="username"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/user_list_item_user_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/user_list_item_user_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/user_list_item_iv_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:src="@drawable/selected_item_green"
        android:visibility="invisible"
        />

</LinearLayout>