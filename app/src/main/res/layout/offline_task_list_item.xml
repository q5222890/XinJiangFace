<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/offline_task_list_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/offline_task_list_tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_5dp"
        />

    <TextView
        android:id="@+id/offline_task_list_tv_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_task_list_tv_no"
        app:layout_constraintBottom_toTopOf="@+id/offline_task_list_tv_apply"
        android:layout_margin="@dimen/dimen_5dp"
        />

    <TextView
        android:id="@+id/offline_task_list_tv_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_task_list_tv_startTime"
        app:layout_constraintBottom_toTopOf="@+id/offline_task_list_tv_aprove"
        android:layout_margin="@dimen/dimen_5dp"
        />

    <TextView
        android:id="@+id/offline_task_list_tv_aprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_task_list_tv_apply"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimen_5dp"
        />
</android.support.constraint.ConstraintLayout>