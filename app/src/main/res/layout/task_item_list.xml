<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/task_item_tv_type_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"/>

    <TextView
        android:id="@+id/task_item_tv_gun_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"/>

    <TextView
        android:id="@+id/task_item_tv_pos_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"/>

    <TextView
        android:id="@+id/task_item_tv_object_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/task_item_tv_back_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/task_item_tv_police_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/task_item_tv_police_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/text_size_18sp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center">

        <CheckBox
            android:id="@+id/task_item_cb_get_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/task_item_btn_get_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="领取"
        android:visibility="gone"
        />

</LinearLayout>