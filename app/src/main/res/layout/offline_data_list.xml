<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10dp"
    android:id="@+id/offline_data_root_view"
    android:background="#01579B"
    >

    <TextView
        android:id="@+id/offline_data_tv_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/offline_data_tv_police"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/offline_data_tv_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/offline_data_tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/offline_data_tv_gun_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <TextView
        android:id="@+id/offline_data_tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/text_size_18sp"
        />

    <EditText
        android:id="@+id/offline_data_edt_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/shape_edt_bg"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center">

        <CheckBox
            android:id="@+id/offline_data_cb_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>